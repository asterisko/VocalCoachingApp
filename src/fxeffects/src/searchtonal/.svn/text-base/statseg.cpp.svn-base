                               }
                               break; // exit loop while
                            }
                            nextmatch++;
                            if (indtonal==(ntonal-1)) indtonal++;
                         }
                      }
                   }
                   // does not give desired results if (npitch>0) pitchacc /= (double)npitch;
                   // rank harmonic patterns according to decreasing power
